@model IS349Pro.Models.Employee
@{
    ViewData["Title"] = "New Employee";
}

<div class="container">
    <form method="post" action="Create">
        <div class="row">
            <div class="col-4">
                <div class="form-group">
                    <label class="form-lable" asp-for="DepartmentId"></label>
                    <select class="form-control" asp-items="ViewBag.Departments" asp-for="DepartmentId"></select>
                </div>
                <div class="form-group">
                    <label class="form-lable" asp-for="PositionId"></label>
                    <select class="form-control" asp-items="ViewBag.Positions" asp-for="PositionId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="EmployeeName"></label>
                    <input asp-for="EmployeeName" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="form-lable" asp-for="Gender"></label>
                    <select class="form-control" asp-for="Gender">
                        <option value="Female">Female</option>
                        <option value="Male">Male</option>
                    </select>
                </div>
               
            </div>
            <div class="col-4">
                <div class="form-group">
                    <label asp-for="Salary"></label>
                    <input asp-for="Salary" type="number" value="0" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Address"></label>
                    <textarea asp-for="Address" class="form-control"></textarea>
                </div>
                <br/>
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>
