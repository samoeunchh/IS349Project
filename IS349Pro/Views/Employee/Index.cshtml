@{
    ViewData["Title"] = "Employee List";
}

<div class="container">
    <div class="row">
        <div class="col-4">
            <a href="/Employee/Create" class="btn btn-primary">
            Add Employee</a>
        </div>
        <div class="col-6">
            <input class="form-control" id="Search" name="Search" />
        </div>
        <div class="col-2">
            <button class="btn btn-primary" id="btnSearch">Search</button>
        </div>
    </div>
    <br/>
   <div class="row">
       <div class="col-12">
           <table class="table table-bordered" id="empList">
               <thead>
                   <tr>
                       <th>Employee Name</th>
                       <th>Gender</th>
                       <th>Address</th>
                       <th>Salary</th>
                       <th>Position</th>
                       <th>Department</th>
                       <th>Edit</th>
                       <th>Delete</th>
                   </tr>
               </thead>
               <tbody>
                  
               </tbody>
           </table>
       </div>
   </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            //GetEmployee("");
            $("#empList").DataTable({
                "processing": true, // for show progress bar    
                "serverSide": true, // for process server side    
                "filter": true, // this is for disable filter (search box)
                "ajax": {
                    "url": "/Employee/LoadData",
                    "type": "POST",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "employeeName", "name": "employeeName"},
                    { "data": "gender", "name": "gender"},
                    { "data": "address", "name": "address" },
                    { "data": "salary", "name": "salary" },
                    { "data": "positionName", "name": "positionName"},
                    { "data": "departmentName", "name": "departmentName" },
                    {
                        "render": function (data, type, full, meta) { return '<a class="btn btn-info" href="/Employee/Edit/' + full.employeeId + '">Edit</a>'; }
                    },
                    {
                        data: null,
                        render: function (data, type, row) {
                            return "<a href='#' class='btn btn-danger' onclick=DeleteData('" + row.CustomerID + "'); >Delete</a>";
                        }
                    },
                ]  
            });
        });
        function GetEmployee(q) {
            $("#empList > tbody > tr").empty();
            $.ajax({
                method: "GET",
                url: "/Employee/GetEmployee/?q="+ q,
                success: function (data) {
                    $.each(data, function (i, v) {
                        console.log(v);
                        var row = "<tr><td>" + v.employeeName;
                        row += "</td><td>" + v.gender;
                        row += "</td><td>" + v.address;
                        row += "</td><td>" + v.salary;
                        row += "</td><td>" + v.positionName;
                        row += "</td><td>" + v.departmentName;
                        row += "</td><td><a class='btn btn-primary' href='/Employee/Edit/" + v.employeeId +"'>Edit</a></td></tr>";
                        $("#empList").append(row);
                    });
                }, error: function (error) {
                    console.log(error);
                }
            });
        }
        //$("#btnSearch").click(function () {
        //    var search = $("#Search").val();
        //    if (search) {
        //        GetEmployee(search);
        //    } else {
        //        GetEmployee("");
        //    }
        //});
        function Delete(id) {
            var result = confirm("Do you want to delete this record?");
            if (result) {
                $.ajax({
                    method: "POST",
                    url: "/Position/Delete/" + id,
                    success: function (response) {
                        window.location.reload();
                    }, error: function (error) {
                        console.log(error);
                    }
                });
            }
        }
    </script>
}

