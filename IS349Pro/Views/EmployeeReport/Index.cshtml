@{
    ViewData["Title"] = "Employee List";
}

<div class="container">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-3">
                    <select asp-items="ViewBag.Departments" class="form-control" id="departmentId">
                        <option>Select ...</option>
                    </select>
                </div>
                <div class="col-3">
                    <select asp-items="ViewBag.Positions" class="form-control" id="positionId">
                        <option>Select ...</option>
                    </select>
                </div>
                <div class="col-3">
                    <input class="form-control" id="search" />
                </div>
                <div class="col-3">
                    <button class="btn btn-primary">Search</button>
                    <button class="btn btn-primary">Print</button>
                </div>
            </div>
        </div>
    </div>
</div>
    <br/>
   <div class="row">
       <div class="col-12">
           <table class="table table-bordered" id="empList">
               <thead>
                   <tr>
                       <th>Employee Name</th>
                       <th>Gender</th>
                       <th>Address</th>
                       <th>Salary</th>
                       <th>Position</th>
                       <th>Department</th>
                   </tr>
               </thead>
               <tbody>
                  
               </tbody>
           </table>
       </div>
   </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            GetEmployee("");
        });
        function GetEmployee(q) {
            $("#empList > tbody > tr").empty();
            $.ajax({
                method: "GET",
                url: "/Employee/GetEmployee/?q="+ q,
                success: function (data) {
                    $.each(data, function (i, v) {
                        console.log(v);
                        var row = "<tr><td>" + v.employeeName;
                        row += "</td><td>" + v.gender;
                        row += "</td><td>" + v.address;
                        row += "</td><td>" + v.salary;
                        row += "</td><td>" + v.positionName;
                        row += "</td><td>" + v.departmentName;
                        row += "</td><td><a class='btn btn-primary' href='/Employee/Edit/" + v.employeeId +"'>Edit</a></td></tr>";
                        $("#empList").append(row);
                    });
                }, error: function (error) {
                    console.log(error);
                }
            });
        }
        $("#btnSearch").click(function () {
            var search = $("#Search").val();
            if (search) {
                GetEmployee(search);
            } else {
                GetEmployee("");
            }
        });
        function Delete(id) {
            var result = confirm("Do you want to delete this record?");
            if (result) {
                $.ajax({
                    method: "POST",
                    url: "/Position/Delete/" + id,
                    success: function (response) {
                        window.location.reload();
                    }, error: function (error) {
                        console.log(error);
                    }
                });
            }
        }
    </script>
}

